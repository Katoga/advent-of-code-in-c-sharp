<Window x:Class="AdventOfCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventOfCode"
        mc:Ignorable="d"
        Title="Advent of Code" Height="300" Width="300">
    <Grid>
        <ComboBox x:Name="day" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200">
            <ComboBoxItem Content="Day 1: Not Quite Lisp" HorizontalAlignment="Left" Width="180"/>
        </ComboBox>
        <ComboBox x:Name="part" HorizontalAlignment="Left" Margin="215,10,0,0" VerticalAlignment="Top" Width="50">
            <ComboBoxItem Content="1" HorizontalAlignment="Left" Width="30"/>
            <ComboBoxItem Content="2" HorizontalAlignment="Left" Width="30"/>
        </ComboBox>
        <TextBox x:Name="inputData" HorizontalAlignment="Left" Height="100" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="solve" Content="Get solution" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="solution" HorizontalAlignment="Left" Margin="10,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Height="50"/>

    </Grid>
</Window>
